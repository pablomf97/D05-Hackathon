<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
    ">

	<!-- Security infrastructure -->

	<bean id="loginService" class="security.LoginService" />

	<bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />

	<!-- Access control -->

	<security:http auto-config="true" use-expressions="true">
		<!-- CurrÃ­cula -->

		<security:intercept-url pattern="/curricula/critic/create.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/curricula/critic/display.do"
			access="permitAll" />

		<!-- educationData -->

		<security:intercept-url pattern="/educationData/critic/list.do"
			access="permitAll" />

		<security:intercept-url pattern="/educationData/critic/edit.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/educationData/critic/create.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/educationData/critic/display.do"
			access="permitAll" />

		<!-- professionalData -->

		<security:intercept-url pattern="/professionalData/critic/list.do"
			access="permitAll" />

		<security:intercept-url pattern="/professionalData/critic/edit.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/professionalData/critic/create.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/professionalData/critic/display.do"
			access="permitAll" />


		<!-- miscellaneousData -->

		<security:intercept-url pattern="/miscellaneousData/critic/list.do"
			access="permitAll" />

		<security:intercept-url pattern="/miscellaneousData/critic/edit.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/miscellaneousData/critic/create.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/miscellaneousData/critic/display.do"
			access="permitAll" />

		<!-- PersonalData -->

		<security:intercept-url pattern="/personalData/critic/edit.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/personalData/critic/save.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/personalData/critic/create.do"
			access="hasRole('CRITIC')" />

		<security:intercept-url pattern="/personalData/critic/display.do"
			access="permitAll" />

		<!-- Event -->

		<security:intercept-url pattern="/event/edit.do"
			access="hasRole('FILMENTHUSIAST')" />

		<security:intercept-url pattern="/event/save.do"
			access="hasRole('FILMENTHUSIAST')" />

		<security:intercept-url pattern="/event/create.do"
			access="hasRole('FILMENTHUSIAST')" />

		<security:intercept-url pattern="/event/display.do"
			access="hasAnyRole('FILMENTHUSIAST','MODERATOR')" />

		<security:intercept-url pattern="/event/filmenthusiast/listMembers.do"
			access="hasRole('FILMENTHUSIAST')" />

		<security:intercept-url pattern="/event/filmenthusiast/request.do"
			access="hasRole('FILMENTHUSIAST')" />

		<!-- Group -->


		<security:form-login login-page="/security/login.do"
			password-parameter="password" username-parameter="username"
			authentication-failure-url="/security/loginFailure.do" />

		<security:logout logout-success-url="/"
			invalidate-session="true" />

		<!-- SocialProfile -->

		<security:intercept-url pattern="/social/actor/**"
			access="isAuthenticated()" />

		<!-- Actor -->

		<security:intercept-url pattern="/administrator/administrator/register.do"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/moderator/administrator/register.do"
			access="hasRole('ADMIN')" />

		<security:intercept-url pattern="/sponsor/register.do"
			access="isAnonymous()" />

		<security:intercept-url pattern="/filmEnthusiast/register.do"
			access="isAnonymous()" />

		<security:intercept-url pattern="/critic/register.do"
			access="isAnonymous()" />

		<!-- System configuration -->

		<security:intercept-url pattern="/sysconfig/**"
			access="hasRole('ADMIN')" />

	</security:http>

</beans>